@model AppClient.CanchitaWS.Sede

@{
    ViewBag.Title = "Eliminar";
    Layout = null;
}

<div id="basic-card" class="section">
    <div class="row">
        <div class="col s12 m10 l12">
            <div class="row">
                <div class="col s12 m8 l12">
                    <div class="card  white">
                        <div class="card-content cyan lighten-4">
                            <h5 class=" center-align grey-text  text-darken-2">¿Estas seguro que deseas eliminar esta sede?</h5>
                            
                        </div>
                        <div class="card-action">
                            <div id="table-datatables">

                                <div class="row">

                                    <div class="col s12 m8 l9 offset-l1">
                                        <table id="data-table-simple" class="responsive-table display" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Descripcion)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Direccion)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Imagen)
                                                    </th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                             
                                                    <tr>
                                                        <td style="font-size:0.8em;">
                                                            @Html.DisplayFor(modelItem => modelItem.Descripcion)
                                                        </td>
                                                        <td style="font-size:0.8em;">
                                                            @Html.DisplayFor(modelItem => modelItem.Direccion)
                                                        </td>
                                                        <td style="font-size:0.8em;">
                                                            @{ var imagen = string.Empty;
                                                             if (@Model.Imagen != null)
                                                             {
                                                                 var base64 = Convert.ToBase64String(@Model.Imagen);
                                                                 imagen = string.Format("data:image/jpg;base64,{0}", base64);
                                                             }
                                                            }
                                                            <img width="150" height="80" src="@imagen" alt="No Hay" class="materialboxed" />
                                                        </td>
                                                    </tr>
                                                
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" />
        </div>
    }

