@model IEnumerable<AppClient.CanchitaWS.Reserva>

@{
    ViewBag.Title = "verlistaReservasxCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <style type="text/css" >
        table{
            background-color:whitesmoke;
            margin-left:10%;
            
            width:80%;
        }
    </style>
}

<h2 style="color:green;text-align:center;text-decoration:underline;font-family:'Times New Roman', Times, serif ">Mis Reservas</h2>

<h4 style="font-family:Tahoma;">
    @Html.ActionLink("Realizar otra Reserva","Index","SedeClient")
</h4>
<table class="table">
    <tr class="row green ">
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaReserva)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Monto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="row green-text">
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaReserva)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Monto)
        </td>
        <td>
            @Html.ActionLink("- Ver Detalle -", "verDetalleXReserva", new { id = item.Id }) 

        </td>
    </tr>
}

</table>
<p class="center-align green-text">@ViewBag.Mensaje</p>
