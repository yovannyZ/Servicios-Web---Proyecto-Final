@{
    ViewBag.Title = "Index";
}

<h2 class="center-align">Haz tu reserva</h2>
<div class="container">
    @using (Html.BeginForm("InsertarHoras", "Reserva", FormMethod.Get, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col m6 offset-m3">
                <div class="input-field">
                    <label for="dia">Fecha de reserva  (Haz click qui)</label>
                    <input type="date" id="dia" name="dia" class="datepicker" />
                    <div id="error" class="error"> Selecciona una fecha</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col m6 offset-m4">
                <button id="diponibles" type="submit" class="waves-effect waves-light btn"><i class="material-icons right">schedule</i>Ver Horarios Disponibles</button>
            </div>
        </div>

    }
</div>

