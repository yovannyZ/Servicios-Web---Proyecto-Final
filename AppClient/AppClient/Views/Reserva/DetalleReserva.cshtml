@model List<AppClient.CanchitaWS.DetalleReserva>

@{
    Layout = "~/Views/Shared/_LayoutAdmind.cshtml";
    double montoTotal = 0;    
}

    <h3 class="center-align">Detalle de la  Reserva</h3>
   
    <table class="striped">
        <thead>
            <tr>
                <th>Hora Inicio</th>
                <th>Hora Fin</th>
                <th>Precio</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(it => it[i].HoraInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(it => it[i].HoraFin)
                    </td>
                    <td>
                        @Html.DisplayFor(it => it[i].Precio)
                    </td>
                    <td>
                        @Html.ActionLink("Eliminar", "EliminarDetalle", new { id = @Model[i].Tarifa.Id })
                    </td>
                </tr>
                {
                    montoTotal = montoTotal + @Model[i].Precio;
                }

                @Html.HiddenFor(it => it[i].Tarifa.Id)
                @Html.HiddenFor(it => it[i].HoraFin)
                @Html.HiddenFor(it => it[i].Precio)
                @Html.HiddenFor(it => it[i].HoraFin)

            }
        </tbody>
    </table>
    <h1>Monto total = @montoTotal</h1>
<button class="waves-effect waves-light  btn btnPagar" data-id="@montoTotal"><i class="mdi-action-thumb-up left"></i>Pagar Reserva</button>
<input type="button" value="Atras" onclick="history.go(-1)" />
   






<!-- Modal Pagar -->
<div id="modalPagar" class="modal">
    <div class="modal-content" id="modal-content">
        <!--View Pagar-->
    </div>
    <div class="modal-footer">
        <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Cerrar</a>
    </div>
</div>


@section scripts{
    <script src="~/Scripts/Reserva/Reserva.js"></script>
}