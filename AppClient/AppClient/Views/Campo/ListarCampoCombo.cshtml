
@{
    ViewBag.Title = "ListarCampoCombo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListarCampoCombo</h2>


@section Styles {

    <link href="@Url.Content("~/content/materialize/css/style.css")" type="text/css" rel="stylesheet" media="screen,projection">
    <link href="@Url.Content("~/content/materialize/css/page-center.css")" type="text/css" rel="stylesheet" media="screen,projection">
    <link href="@Url.Content("~/content/materialize/css/prism.css")" type="text/css" rel="stylesheet" media="screen,projection">
}


@using (Html.BeginForm("VerCalendario", "Campo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div id="login-page" class="row">
        <div class="col s12 z-depth-4 card-panel">
            <form class="login-form">
                <div class="row">
                    <div class="input-field col s12 center">
                        <img src="~/img/anyone.png" alt="" class="circle responsive-img valign profile-image-login">
                        <p class="center login-form-text">Escoge el campo para registrar la reserva.</p>
                    </div>
                </div>

                <!---->
                <div class="row margin">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">location_on</i>
                        @Html.DropDownList("combo", ViewBag.Id as IEnumerable<SelectListItem>, "--Elige el campo a Reservar")
                        <label class="select-label">Sede</label>

                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <button class="btn waves-effect waves-light col s12" type="submit" name="action">Ver Horarios Disponibles</button>
                        <p class="red-text text-darken-3 center-align">@ViewBag.Error</p>
                    </div>
                </div>

            </form>
        </div>
    </div>

}