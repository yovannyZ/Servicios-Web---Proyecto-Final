@model IEnumerable<AppClient.CanchitaWS.Campo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    AppClient.CanchitaWS.Sede sede=( AppClient.CanchitaWS.Sede)Session["SedeCliente"];
    
}

<div class="container">
    <div class="card-panel black white-text center-align"><h5>Sede: @sede.Descripcion</h5></div>
    

    <div class=" row">

        @foreach (var item in Model)
        {

            <div class="col m3">
                <div class="card">
                    <div class="card-image">
                        @{ var imagen = string.Empty;
                         if (item.Imagen != null)
                         {
                             var base64 = Convert.ToBase64String(item.Imagen);
                             imagen = string.Format("data:image/jpg;base64,{0}", base64);
                         }
                        }

                        <img width="350" height="250" src="@imagen" alt="No Hay" class="materialboxed" />
                        <span class="card-title"></span>
                    </div>
                    <div class="card-content">
                        <p>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </p>
                    </div>
                    <div class="card-action">
                        @Html.ActionLink("Ver Horarios Disponibles", "VerCalendario", new { idCampo = item.Id })
                    </div>
                </div>
            </div>

        }

    </div>
</div>
