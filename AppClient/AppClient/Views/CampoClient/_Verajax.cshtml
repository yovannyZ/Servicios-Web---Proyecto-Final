@model List<AppClient.CanchitaWS.Tarifa>

@{
    ViewBag.Title = "Index";
    Layout =null;
}

@using (Html.BeginForm("Disponibilidad", "CampoClient", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
   
   <div class="row">
        @for (var i = 0; i < Model.Count(); i++)
        {
        <div class="col m4" style="padding:15px;">
            <div class="borrarHidden">
                <div class="switch">
                    <label>
                        @Html.DisplayFor(it => it[i].HoraInicio)-@Html.DisplayFor(it => it[i].HoraFin)
                        @Html.CheckBoxFor(it => it[i].Checked, new { @id = @Html.DisplayFor(it => it[i].HoraInicio) })
                        <span class="lever"></span>

                    </label>
                </div>
            </div>
        </div>

        @Html.HiddenFor(it => it[i].Id)
        @Html.HiddenFor(it => it[i].HoraInicio)
        @Html.HiddenFor(it => it[i].Precio)
        @Html.HiddenFor(it => it[i].HoraFin)


        }
    </div>

    <button class="btn waves-effect waves-light" type="submit" name="action">
        Realizar reserva
        <i class="material-icons right">send</i>
    </button>

}
<script>

    $(document).ready(function () {
        $('.borrarHidden input[type="hidden"]').remove();
      
    });
</script>




