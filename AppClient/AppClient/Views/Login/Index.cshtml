@model AppClient.CanchitaWS.Usuario

@{
    ViewBag.Title = "Login";
}


<div class="container">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        
            <h4>Usuario</h4>
            
            @Html.ValidationSummary(true)
            <div class="row">
                <div class="input-field col s12">
                    @Html.TextBoxFor(model => model.Username, new { @required="true" })
                    @Html.LabelFor(model => model.Username)
                    @Html.ValidationMessageFor(model => model.Username)
                </div>
                <div class="form-group">


                   
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Clave, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.Clave)
                        @Html.ValidationMessageFor(model => model.Clave)
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
    }

    
</div>
