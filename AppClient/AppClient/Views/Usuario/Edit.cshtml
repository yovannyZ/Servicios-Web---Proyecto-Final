@model AppClient.CanchitaWS.Usuario

@{
    ViewBag.Title = "Edit";
    Layout = null;
}



@using (Html.BeginForm("Edit", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
 

    
            <div class="row">
                <div class="col s12 m8 l12">
                    <div class="card  white">
                        <div class="card-content cyan lighten-4">
                            <h5 class=" center-align grey-text  text-darken-2">Editar Usuario</h5>
                        </div>
                        <div class="card-action">
                            <div class="row">
                                <div class="col s12">
                                    <div style="width:70% ; margin:0 auto;">
                                        <div class="row">
                                            <div class="input-field col m6">
                                                <i class="mdi-action-face-unlock prefix"></i>
                                                @Html.TextBoxFor(model => model.Nombres, new { @maxlength = "50", @required = "required" })
                                                @Html.LabelFor(model => model.Nombres, new { @class = "active" })
                                            </div>
                                            <div class="input-field col m6">
                                                <i class="mdi-action-face-unlock prefix"></i>
                                                @Html.TextBoxFor(model => model.Apellidos, new { @maxlength = "50", @required = "required" })
                                                @Html.LabelFor(model => model.Apellidos, new { @class = "active" })
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="input-field col s12">
                                                <i class="mdi-communication-email prefix"></i>
                                                <input type="email" id="Email" name="Email" maxlength="150" required="required" value="@Model.Email" />
                                                @Html.LabelFor(model => model.Email, new { @class = "active" })
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col m12">
                                                <i class="mdi-action-lock prefix"></i>
                                                @Html.TextBoxFor(model => model.Clave, new { @maxlength = "20", @required = "required" })
                                                @Html.LabelFor(model => model.Clave, new { @class="active"})
                                            </div>
                                        </div>

                                        @Html.HiddenFor(model => model.Id)
                                        @Html.HiddenFor(model => model.Username)
                                        @Html.HiddenFor(model => model.TipoUsuario)
                                        @Html.HiddenFor(model => model.Estado)

                                        <div class="row">
                                            <div class="file-field input-field">
                                                <div class="btn col m6" id="upload-button">
                                                    <span>Imagen</span>
                                                </div>
                                                <br /><br />
                                                <input type="file" id="fimage" name="fimage" style="display:none;">
                                                
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="input-field col m6 " >
                                                <img id="imagenUsuario" src="" width="180" height="200"/>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="row">
                                                <div class="input-field col s12">
                                                    <button class="btn cyan waves-effect waves-light right" type="submit" name="action">
                                                        Guardar
                                                        <i class="mdi-content-send right"></i>
                                                    </button>
                                                </div>
                                               
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
}

<script>

    var img = $('#imagenUsuario');
    img.css('display', 'none');

    $('#upload-button').click(function () {
        $('#fimage').trigger('click');
        return false;
    });

    function readfichier(e) {
        if (window.FileReader) {
            var file = e.target.files[0];
            var reader = new FileReader();
            if (file && file.type.match('image.*')) {
                reader.readAsDataURL(file);
            } else {
                img.css('display', 'none');
                img.attr('src', '');
            }
            reader.onloadend = function (e) {
                img.attr('src', reader.result);
                img.css('display', 'block');
            }
        }
    }

    document.getElementById('fimage').addEventListener('change', readfichier, false);
</script>



