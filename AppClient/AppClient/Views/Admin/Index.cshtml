@model AppClient.CanchitaWS.Usuario

@{
   
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}



@using (Html.BeginForm("Index", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div id="login-page" class="row">
        <div class="col s12 z-depth-4 card-panel">
            <form class="login-form">
                <div class="row">
                    <div class="input-field col s12 center">
                        <img src="~/img/anyone.png" alt="" class="circle responsive-img valign profile-image-login">
                        <p class="center login-form-text">Accede a tu cuenta administrativa aquí...</p>
                    </div>
                </div>
                <div class="row margin">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">perm_identity</i>
                        @Html.TextBoxFor(model => model.Username,  new { @required = "required" } )
                        <label for="Username" class="center-align">Username</label>
                       
                    </div>
                </div>
                <div class="row margin">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">lock_outline</i>
                        @Html.PasswordFor(model => model.Clave, new { @required = "required" })
                        <label for="Clave">Password</label>
                    </div>
                </div>
                <!---->
                <div class="row margin">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">location_on</i>
                        @Html.DropDownList("combo", ViewBag.Id as IEnumerable<SelectListItem>, "--Elige tu Sede", new { @required = "required" })
                        <label class="select-label">Sede</label>
                        
                    </div>
                </div>
                <div class="row">
                    
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <button class="btn waves-effect waves-light col s12" type="submit" name="action">Login</button>
                        <p class="red-text text-darken-3 center-align">@ViewBag.Error</p>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6 m6 l6">
                        <p class="margin right-align medium-small"><a href="page-forgot-password.html">Olvisate tu contraseña?</a></p>
                    </div>
                </div>

            </form>
        </div>
    </div>

}