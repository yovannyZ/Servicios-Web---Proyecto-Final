<?xml version="1.0" encoding="utf-8"?>
<!--
  Para obtener más información acerca de cómo configurar una aplicación ASP.NET, consulte
  http://go.microsoft.com/fwlink/?LinkId=301880
  -->
<configuration>
  <appSettings>
    <add key="webpages:Version" value="3.0.0.0" />
    <add key="webpages:Enabled" value="false" />
    <add key="PreserveLoginUrl" value="true" />
     <add key="ClientValidationEnabled" value="true" />
    <add key="UnobtrusiveJavaScriptEnabled" value="true" />
  </appSettings>
  <system.web>
    <compilation debug="true" targetFramework="4.5" />
    <httpRuntime targetFramework="4.5" />
  <customErrors mode="On">
    <error statusCode="404" redirect ="~/Errors/NotFound"/>
  </customErrors>
  </system.web>
  <system.webServer>
    <httpErrors errorMode="Custom" existingResponse="Replace">
      <remove statusCode="404" />
      <error statusCode="404" path="/Errors/NotFound" responseMode="ExecuteURL" />
    </httpErrors>
  </system.webServer>

  <system.serviceModel>
    
    <bindings>
      <basicHttpBinding>
        <binding name="BasicHttpBinding_ITransaccion"
                 maxReceivedMessageSize="2000000000"/>
      </basicHttpBinding>
    </bindings>
    <client>
      <endpoint address="http://localhost:1557/Transaccion.svc" binding="basicHttpBinding"
        bindingConfiguration="BasicHttpBinding_ITransaccion" contract="CanchitaWS.ITransaccion"
        name="BasicHttpBinding_ITransaccion" />
    </client>
  </system.serviceModel>

</configuration>
